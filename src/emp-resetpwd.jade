doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		title Xillion-emp-signup
		link(rel='stylesheet', href='css/main.css')
	body
		// Employee reset password page starts
		main
			section.employee-login
				.container-fluid
					.row
						.col-md-5.login-bgimage_position
							a(href='#')
								img.img-responsive.logo-spacing(src='img/logo.png', alt='logo')
						.col-md-7.reset-pwd-spacing
							.main-form-spacing
								h3.main-form-head Reset password
								.row
									form.reset-form.signup-login-form(action='')
										.col-md-4
											.form-element.form-element--input
												label.enter-input.form-text.form-element__label Enter new password
												input.input-style-detail.field-text.form-element__input(type='password', name='pwd')
										.col-md-4.col-md-offset-1
											.form-element.form-element--input
												label.enter-input.form-text.form-element__label Confirm Password
												input.input-style-detail.field-text.form-element__input(type='password', name='pwd')
										.clearfix
										// button
										.conformation-btn
											button.btn.btn--no-margin(type='submit') Reset
											p.exist-account
												| Go back to
												a.exist-account-color.conditional-text(href='#')  Sign In
			// Employee reset password ended
	script(src='js/jquery-2.1.4.js')
	script(src='js/input-anim.js')
